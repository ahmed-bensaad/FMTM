<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oc.rss.frommindtomusic">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="From Mind To Music"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChoiceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InstrumentsChoiceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HarmonizeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".OrchestrateActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DoItYourselfActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SingInstrumentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SavedActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StyleActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".FirstInstrumentActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>