<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sing_instrument"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.oc.rss.frommindtomusic.SingInstrumentActivity">

    <Button
        android:text="DONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ValidateIns"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners_button"
        android:textColor="?attr/colorControlNormal"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp" />

    <TextView
        android:text="Sing your melody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/playIn"
        android:background="@drawable/d300_02x"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/ValidateIns"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/image3398"
        android:layout_height="150dp"
        android:id="@+id/record"
        android:layout_width="150dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Chronometer
            android:layout_height="25dp"
            android:id="@+id/recordchrono2"
            android:layout_width="100dp"
            android:textAlignment="center"
        android:layout_below="@+id/record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
