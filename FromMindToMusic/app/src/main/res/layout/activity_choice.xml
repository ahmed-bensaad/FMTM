<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.oc.rss.frommindtomusic.ChoiceActivity">

    <Button
        android:text="Orchestrate"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_marginTop="40dp"
        android:id="@+id/orchestrateButton"
        android:layout_alignStart="@+id/button7"
        android:textSize="18sp"
        android:background="@drawable/rounded_corners_button"
        android:textColor="?attr/colorControlNormal"
        android:layout_width="180dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAllCaps="false" />

    <Button
        android:text="Harmonize"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:textSize="18sp"
        android:background="@drawable/rounded_corners_button"
        android:textColor="?attr/colorControlNormal"
        android:layout_width="180dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAllCaps="false" />

    <Button
        android:text="Adapt the style"
        android:layout_marginTop="40dp"
        android:id="@+id/style"
        android:layout_below="@+id/orchestrateButton"
        android:layout_alignStart="@+id/orchestrateButton"
        android:layout_alignEnd="@+id/button7"
        android:background="@drawable/rounded_corners_button"
        android:textColor="?attr/colorControlNormal"
        android:textSize="18sp"
        android:layout_height="55dp"
        android:layout_width="180dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAllCaps="false" />

    <Button
        android:text="View Results"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_marginTop="47dp"
        android:background="@drawable/rounded_corners_button"
        android:textColor="?attr/colorControlNormal"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="180dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAllCaps="false" />

</RelativeLayout>
