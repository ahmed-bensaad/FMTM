<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background">


    <Button
        android:text="OK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"
        android:id="@+id/button5"
        android:textSize="16sp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:id="@+id/button"
        android:background="@drawable/image3398"
        android:layout_height="150dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/recordchrono"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button4"
        android:background="@drawable/d300_22x"
        android:layout_below="@+id/recordchrono"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="75dp"
        android:id="@+id/button3"
        android:background="@drawable/d300_02x"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Chronometer
        android:layout_height="25dp"
        android:id="@+id/recordchrono"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

</RelativeLayout>
