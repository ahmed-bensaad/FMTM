<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_harmonize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#546e7a"
    tools:context="com.oc.rss.frommindtomusic.HarmonizeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:text="Harmonized Sound"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/playh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/d300_02x"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp" />

    <Button
        android:id="@+id/stoph"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/d300_22x"
        android:layout_marginEnd="32dp"
        android:layout_alignBottom="@+id/playh"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playh"
        android:layout_alignStart="@+id/playh"
        android:layout_marginBottom="57dp"
        android:text="play" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stoph"
        android:layout_alignTop="@+id/button8"
        android:text="stop" />
</RelativeLayout>
