<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instruments_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.oc.rss.frommindtomusic.InstrumentsChoiceActivity">

    <Button
        android:text="Ok"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="Choose your instruments :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chooseInstruments"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="299dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="remove"
        android:id="@+id/Remove_Ins"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_above="@+id/ok"
        android:layout_toEndOf="@+id/ok" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="add"
        android:id="@+id/Add_Ins"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_above="@+id/ok"
        android:layout_toStartOf="@+id/ok" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_above="@+id/Remove_Ins"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:id="@+id/spinner1"
            android:layout_below="@+id/chooseInstruments"
            android:layout_alignEnd="@+id/chooseInstruments" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:visibility="visible" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner5"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner6"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner7"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner8"
            android:visibility="invisible"/>


    </LinearLayout>

</RelativeLayout>
