<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.oc.rss.frommindtomusic.StyleActivity">

    <TextView
        android:text="Choose the style"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Make it jazzy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jazzy"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="Make it funky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funky"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/jazzy"
        android:layout_alignStart="@+id/jazzy"
        android:onClick="onClick"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="Make it groovy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/groovy"
        android:layout_below="@+id/funky"
        android:layout_alignStart="@+id/funky"
        android:onClick="onClick"
        android:background="@drawable/rounded_corners_button"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
